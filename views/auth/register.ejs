<main id="main-menu" class="main-active w-full h-screen bg-gray-600 pt-16 duration-300 fixed top-0 lg:static overflow-auto">
  <div class="w-full h-auto p-2 md:p-6">
    <div class="min-h-[550px] md:min-h-[640px] lg:min-h-[500px] bg-gray-800 py-6 px-4 rounded-lg">
      <form action="" method="post" class="max-w-xl mx-auto">
        <div class="relative mb-4">
          <input type="text" id="name" name="name" class="form-input peer" placeholder=" " autocomplete="off" autofocus />
          <label for="name" class="form-label">Nama Lengkap</label>
        </div>
        <div class="relative mb-4">
          <input type="email" id="email" name="email" class="form-input peer" placeholder=" " autocomplete="off" />
          <label for="email" class="form-label">Alamat Email</label>
        </div>
        <div class="relative mb-4">
          <input type="password" id="password" name="password" min="1" max="100" class="form-input peer" placeholder=" " autocomplete="off" />
          <label for="password" class="form-label">Password</label>
        </div>
        <div class="relative mb-4">
          <input type="password" id="confirm" name="confirm" min="1" max="100" class="form-input peer" placeholder=" " autocomplete="off" />
          <label for="confirm" class="form-label">Konfirmasi</label>
        </div>

        <button type="button" class="form-button">Daftar</button>
      </form>
    </div>

    <!-- Footer -->
    <%- include("../partials/footer") %>
  </div>
</main>
