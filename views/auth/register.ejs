<main id="main-menu" class="main-active w-full h-screen bg-gray-600 pt-16 duration-300 fixed top-0 lg:static overflow-auto">
  <div class="w-full h-auto p-2 md:p-6">
    <div class="min-h-[550px] md:min-h-[640px] lg:min-h-[500px] bg-gray-800 py-6 px-4 rounded-lg">
      <form action="/auth/register" method="post" class="max-w-xl mx-auto">
        <!-- Alert Success -->
        <% if (message && message?.status) { %><%- include("../partials/alert-success", { message: message?.value }) %><% } %>
        <!-- Alert Failed -->
        <% if (message && !message?.status) { %><%- include("../partials/alert-error", { message: message?.value }) %><% } %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <div class="relative">
          <input type="text" id="name" name="name" value="<%= value?.name %>" class="<% if (errors?.name) { %>form-input-error peer<% } else { %>form-input peer<% } %>" placeholder=" " autocomplete="off" autofocus />
          <label for="name" class="<% if (errors?.name) { %>form-label-error<% } else { %>form-label<% } %>">Nama Lengkap</label>
        </div>
        <p class="form-message-error"><%= (errors?.name) ? errors?.name?.msg : "" %></p>
        <div class="relative">
          <input type="email" id="email" name="email" value="<%= value?.email %>" class="<% if (errors?.email) { %>form-input-error peer<% } else { %>form-input peer<% } %>" placeholder=" " autocomplete="off" autofocus />
          <label for="email" class="<% if (errors?.email) { %>form-label-error<% } else { %>form-label<% } %>">Alamat Email</label>
        </div>
        <p class="form-message-error"><%= (errors?.email) ? errors?.email?.msg : "" %></p>
        <div class="relative">
          <input type="password" id="password" name="password" class="<% if (errors?.password) { %>form-input-error peer<% } else { %>form-input peer<% } %>" placeholder=" " autocomplete="off" />
          <label for="password" class="<% if (errors?.password) { %>form-label-error<% } else { %>form-label<% } %>">Password</label>
        </div>
        <p class="form-message-error"><%= (errors?.password) ? errors?.password?.msg : "" %></p>
        <div class="relative">
          <input type="password" id="confirm" name="confirm" class="<% if (errors?.confirm) { %>form-input-error peer<% } else { %>form-input peer<% } %>" placeholder=" " autocomplete="off" />
          <label for="confirm" class="<% if (errors?.confirm) { %>form-label-error<% } else { %>form-label<% } %>">Konfirmasi</label>
        </div>
        <p class="form-message-error"><%= (errors?.confirm) ? errors?.confirm?.msg : "" %></p>

        <button type="submit" class="form-button">Daftar</button>
      </form>
    </div>

    <!-- Footer -->
    <%- include("../partials/footer") %>
  </div>
</main>
